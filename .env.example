# =====================================================================
# Environment Variables - Copy to .env.local for local development
# =====================================================================

# ============ FRONTEND CONFIGURATION ============
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=Progress Hub

# ============ BACKEND CONFIGURATION (When implementing full-stack) ============
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/progress_hub_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=progress_hub_db

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_generate_random_string
JWT_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Node Environment
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Email (Optional - for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# OAuth (Optional - for Google/GitHub login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=info

# AWS/Cloud Storage (Optional - for backups, file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Redis (Optional - for caching, sessions)
REDIS_URL=redis://localhost:6379

# ============ DEPLOYMENT CONFIGURATION ============
# Vercel/Netlify
VERCEL_ENV=production
NETLIFY_SITE_ID=

# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_NAME=

# =====================================================================
# NOTES:
# - Copy this file to .env.local and fill in your actual values
# - NEVER commit .env.local or real secrets to git
# - Use strong, random values for secrets (use: openssl rand -hex 32)
# - For production, use managed secrets in your hosting platform
# =====================================================================
